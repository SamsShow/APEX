{
  "name": "apex-monorepo",
  "private": true,
  "version": "0.1.0",
  "license": "MIT",
  "packageManager": "pnpm@9.0.0",
  "workspaces": [
    "apps/*",
    "packages/*"
  ],
  "scripts": {
    "build": "turbo run build",
    "dev": "turbo run dev --parallel",
    "test": "turbo run test",
    "lint": "turbo run lint",
    "format": "prettier --write .",
    "release": "changeset version && pnpm install --no-frozen-lockfile && changeset publish",
    "prepare": "command -v husky >/dev/null 2>&1 && husky install || echo 'husky not installed - skipping'",
    "ci:verify": "pnpm lint && pnpm build && pnpm test"
  },
  "devDependencies": {
    "@changesets/cli": "^2.27.7",
    "@commitlint/cli": "^19.3.0",
    "@commitlint/config-conventional": "^19.2.2",
    "@types/node": "^20.14.9",
    "@typescript-eslint/eslint-plugin": "^7.14.1",
    "@typescript-eslint/parser": "^7.14.1",
    "eslint": "^9.7.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-import-resolver-typescript": "^3.6.1",
    "eslint-plugin-import": "^2.29.1",
    "husky": "^8.0.3",
    "lint-staged": "^15.2.7",
    "prettier": "^3.3.2",
    "turbo": "^2.0.6",
    "typescript": "^5.5.3"
  },
  "lint-staged": {
    "*.{js,ts,tsx,md,json,yml,yaml}": "prettier --write"
  },
  "dependencies": {
    "@martianwallet/aptos-wallet-adapter": "^0.0.5",
    "@pontem/wallet-adapter-plugin": "^0.2.1",
    "@radix-ui/react-dialog": "^1.1.14",
    "@radix-ui/react-icons": "^1.3.2",
    "@radix-ui/react-scroll-area": "^1.2.9",
    "@radix-ui/react-tabs": "^1.1.12",
    "@radix-ui/react-tooltip": "^1.2.7",
    "@splinetool/react-spline": "^4.1.0",
    "@trustwallet/aptos-wallet-adapter": "^0.1.6",
    "@vercel/analytics": "^1.5.0",
    "class-variance-authority": "^0.7.1",
    "fewcha-plugin-wallet-adapter": "^0.1.3",
    "framer-motion": "^12.23.12",
    "lucide-react": "^0.539.0",
    "next-themes": "^0.4.6",
    "petra-plugin-wallet-adapter": "^0.4.5",
    "react-wrap-balancer": "^1.1.1",
    "tailwind-merge": "^3.3.1",
    "three": "^0.179.1"
  }
}
